<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AutoQAC.ViewModels"
        xmlns:models="using:AutoQAC.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="600" d:DesignHeight="500"
        x:Class="AutoQAC.Views.CleaningResultsWindow"
        x:DataType="vm:CleaningResultsViewModel"
        Title="{Binding WindowTitle}"
        Width="600" Height="500"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True">

    <Design.DataContext>
        <vm:CleaningResultsViewModel />
    </Design.DataContext>

    <DockPanel Margin="15">
        <!-- Header with summary -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15">
            <TextBlock Text="{Binding SummaryText}"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,10" />

            <!-- Statistics Grid -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="4" Padding="15">
                <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="Auto,Auto">
                    <!-- Row 1: Plugin counts -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding TotalPlugins}"
                                   FontSize="24" FontWeight="Bold"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Total" FontSize="12"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CleanedCount}"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="Green"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Cleaned" FontSize="12"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding SkippedCount}"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="Orange"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Skipped" FontSize="12"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding FailedCount}"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="Red"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Failed" FontSize="12"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>

                    <!-- Row 2: Cleaning stats -->
                    <Separator Grid.Row="1" Grid.ColumnSpan="4" Margin="0,10" />
                </Grid>
            </Border>

            <!-- Records cleaned summary -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="4" Padding="15" Margin="0,10,0,0">
                <Grid ColumnDefinitions="*,*,*,*">
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding TotalITMs}"
                                   FontSize="20" FontWeight="SemiBold"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="ITMs Removed" FontSize="11"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding TotalUDRs}"
                                   FontSize="20" FontWeight="SemiBold"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="UDRs Fixed" FontSize="11"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center"
                                IsVisible="{Binding HasPartialForms}">
                        <TextBlock Text="{Binding TotalPartialForms}"
                                   FontSize="20" FontWeight="SemiBold"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Partial Forms" FontSize="11"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding DurationText}"
                                   FontSize="20" FontWeight="SemiBold"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Duration" FontSize="11"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Buttons at bottom -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,15,0,0">
            <Button Content="Export Report"
                    Command="{Binding ExportReportCommand}"
                    MinWidth="100" />
            <Button Content="Close"
                    Command="{Binding CloseCommand}"
                    IsDefault="True"
                    MinWidth="100" />
        </StackPanel>

        <!-- Plugin results list -->
        <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1"
                CornerRadius="4">
            <Grid RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0"
                           Text="Plugin Details"
                           FontSize="14" FontWeight="SemiBold"
                           Margin="10,5" />

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding PluginResults}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          CanUserReorderColumns="False"
                          CanUserResizeColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Plugin"
                                            Binding="{Binding PluginName}"
                                            Width="2*" />
                        <DataGridTextColumn Header="Status"
                                            Binding="{Binding Status}"
                                            Width="80" />
                        <DataGridTextColumn Header="ITMs"
                                            Binding="{Binding ItemsRemoved}"
                                            Width="60" />
                        <DataGridTextColumn Header="UDRs"
                                            Binding="{Binding ItemsUndeleted}"
                                            Width="60" />
                        <DataGridTextColumn Header="Summary"
                                            Binding="{Binding Summary}"
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </DockPanel>
</Window>
